{
  "name": "nuxt-react-microfrontend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install:all": "concurrently \"yarn install:nuxt\" \"yarn install:react\"",
    "install:nuxt": "cd nuxt-main && yarn",
    "install:react": "cd app-react && yarn",
    "serve:all": "concurrently \"yarn serve:nuxt\" \"yarn serve:react\"",
    "serve:nuxt": "cd nuxt-main && yarn dev",
    "serve:react": "cd app-react && yarn start",
    "build:all": "concurrently \"yarn build:nuxt\" \"yarn build:react\"",
    "build:nuxt": "cd nuxt-main && yarn build",
    "build:react": "cd app-react && yarn build"
  },
  "keywords": [],
  "author": "https://github.com/rezasohrabi/",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
